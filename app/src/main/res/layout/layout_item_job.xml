<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/personal"
                app:civ_border_color="@color/divider_color"
                app:civ_border_width="1px" />

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_customer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Mohit Rajput"
                android:textColor="@color/primary_text_color"
                android:textSize="15sp"
                app:edittextfont="ROBOTO-MEDIUM.TTF"
                app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Jan"
                android:textColor="@color/secondary_text_color"
                android:textSize="12sp"
                app:edittextfont="ROBOTO-LIGHT.TTF"
                app:edittextfontHint="ROBOTO-LIGHT.TTF" />
        </LinearLayout>

        <com.ebabu.tooreest.customview.CustomTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Hello dude, I'm here and the the the"
            android:textColor="#000000"
            android:textSize="14sp"
            app:edittextfont="ROBOTO-LIGHT.TTF"
            app:edittextfontHint="ROBOTO-LIGHT.TTF" />

        <com.ebabu.tooreest.customview.CustomTextView
            android:id="@+id/tv_urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/urgent_job"
            android:visibility="gone"
            android:textColor="@color/primary_text_color"
            android:textSize="14sp"
            app:edittextfont="ROBOTO-LIGHT.TTF"
            app:edittextfontHint="ROBOTO-LIGHT.TTF" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:layout_marginRight="4dp"
                android:drawableRight="@mipmap/double_arrow"
                app:edittextfont="ROBOTO-MEDIUM.TTF"
                app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@mipmap/double_arrow"-->
                <!--android:layout_marginLeft="4dp"-->
                <!--android:layout_marginRight="4dp"-->
                <!--/>-->

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_subcategory"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="CA/CS Consultant"
                android:textColor="@color/drawer_background"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-MEDIUM.TTF"
                app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indore"
                android:gravity="right"
                android:drawableLeft="@mipmap/address"
                android:drawablePadding="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-LIGHT.TTF"
                app:edittextfontHint="ROBOTO-LIGHT.TTF" />


        </LinearLayout>

        <com.ebabu.tooreest.customview.CustomTextView
            android:id="@+id/btn_place_bid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/yellow_rounded_solid_bg"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="@string/place_bid"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:edittextfont="ROBOTO-REGULAR.TTF" />

    </LinearLayout>
</android.support.v7.widget.CardView>