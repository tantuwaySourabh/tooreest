<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accentColor"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.ebabu.tooreest.customview.CustomTextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/book_now"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:edittextfont="ROBOTO-REGULAR.TTF"
            app:edittextfontHint="ROBOTO-REGULAR.TTF" />

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="15dp"
            android:src="@mipmap/cross" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.ebabu.tooreest.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:edittextfont="ROBOTO-LIGHT.TTF"
            app:edittextfontHint="ROBOTO-LIGHT.TTF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24 Oct, 2017"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:edittextfont="ROBOTO-BOLD.TTF"
                app:edittextfontHint="ROBOTO-BOLD.TTF" />

            <ImageView
                android:id="@+id/btn_edit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:src="@mipmap/edit" />
        </LinearLayout>


        <com.ebabu.tooreest.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/time"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:edittextfont="ROBOTO-LIGHT.TTF"
            app:edittextfontHint="ROBOTO-LIGHT.TTF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12:00 PM"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:edittextfont="ROBOTO-BOLD.TTF"
                app:edittextfontHint="ROBOTO-BOLD.TTF" />

            <ImageView
                android:id="@+id/btn_edit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:src="@mipmap/edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <com.ebabu.tooreest.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/service_charge"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_service_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20b9 500"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ebabu.tooreest.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/service_tax"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_service_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ \u20b9 70"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ebabu.tooreest.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/offer_discount"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- \u20b9 50"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ebabu.tooreest.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/total_amount"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_total_payable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20b9 520"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:edittextfont="ROBOTO-MEDIUM.TTF"
                app:edittextfontHint="ROBOTO-MEDIUM.TTF" />
        </LinearLayout>


        <com.ebabu.tooreest.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/booking_amnt"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_gravity="center"
            app:edittextfont="ROBOTO-LIGHT.TTF"
            app:edittextfontHint="ROBOTO-LIGHT.TTF" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ebabu.tooreest.customview.CustomEditText
                android:id="@+id/et_booking_amnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/booking_amnt"
                android:inputType="number"
                android:maxLength="5"
                android:gravity="center"
                android:text="100"
                android:background="@drawable/bottom_line_white"
                android:textColor="@color/white"
                android:textColorHint="@color/transparent_white"
                android:textSize="25sp"
                app:edittextfont="ROBOTO-BOLD.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

        </LinearLayout>
        <com.ebabu.tooreest.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minimum_booking_amnt"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="11sp"
            app:edittextfont="ROBOTO-LIGHT.TTF"
            app:edittextfontHint="ROBOTO-LIGHT.TTF" />
        <com.ebabu.tooreest.customview.CustomTextView
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/white_rounded_solid_bg"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="@string/book_now"
            android:textColor="@color/accentColor"
            android:textSize="15sp"
            app:edittextfont="ROBOTO-REGULAR.TTF" />
    </LinearLayout>
</LinearLayout>