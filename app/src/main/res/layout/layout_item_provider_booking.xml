<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/gray_square"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/teaching" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_booking_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking No. 1"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_provider_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parth Sarthi"
                    android:textColor="@color/accentColor"
                    android:textSize="16sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service: House Painter"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-REGULAR.TTF"
                    app:edittextfontHint="ROBOTO-REGULAR.TTF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Charges: "
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"
                        app:edittextfont="ROBOTO-REGULAR.TTF"
                        app:edittextfontHint="ROBOTO-REGULAR.TTF" />

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u20b9 10,000"
                        android:textColor="@color/accentColor"
                        android:textSize="14sp"
                        app:edittextfont="ROBOTO-REGULAR.TTF"
                        app:edittextfontHint="ROBOTO-REGULAR.TTF" />
                </LinearLayout>

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: 30 Dec, 2016"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-REGULAR.TTF"
                    app:edittextfontHint="ROBOTO-REGULAR.TTF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.ebabu.tooreest.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/time"
                    android:text="Time"
                    android:textColor="@color/primary_text_color"
                    android:textSize="10sp"
                    app:edittextfont="ROBOTO-LIGHT.TTF"
                    app:edittextfontHint="ROBOTO-LIGHT.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11 AM"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    app:edittextfont="ROBOTO-REGULAR.TTF"
                    app:edittextfontHint="ROBOTO-REGULAR.TTF" />


                <com.ebabu.tooreest.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawableTop="@mipmap/cancel"
                    android:text="Cancel"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    app:edittextfont="ROBOTO-LIGHT.TTF"
                    app:edittextfontHint="ROBOTO-LIGHT.TTF" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <com.ebabu.tooreest.customview.CustomTextView
            android:id="@+id/btn_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:background="@color/accentColor"
            android:drawableLeft="@mipmap/chat_booking"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="@string/chat"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:edittextfont="ROBOTO-REGULAR.TTF"
            app:edittextfontHint="ROBOTO-REGULAR.TTF" />


        <com.ebabu.tooreest.customview.CustomTextView
            android:id="@+id/btn_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/accentColor"
            android:drawableLeft="@mipmap/compelet"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="@string/complete_job"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:edittextfont="ROBOTO-REGULAR.TTF"
            app:edittextfontHint="ROBOTO-REGULAR.TTF" />

        <com.ebabu.tooreest.customview.CustomTextView
            android:id="@+id/btn_user_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:background="@color/accentColor"
            android:drawableLeft="@mipmap/review"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="@string/user_profile"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:edittextfont="ROBOTO-REGULAR.TTF"
            app:edittextfontHint="ROBOTO-REGULAR.TTF" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/divider_color" />
</LinearLayout>