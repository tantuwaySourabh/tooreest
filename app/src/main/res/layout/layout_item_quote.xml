<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardElevation="2dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.ebabu.tooreest.customview.CustomTextView
                            android:id="@+id/tv_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mohit Rajput"
                            android:textColor="@color/primary_text_color"
                            android:textSize="15sp"
                            app:edittextfont="ROBOTO-MEDIUM.TTF"
                            app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                        <com.ebabu.tooreest.customview.CustomTextView
                            android:id="@+id/tv_budget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20b9 345"
                            android:textColor="@color/accentColor"
                            android:textSize="15sp"
                            app:edittextfont="ROBOTO-BOLD.TTF"
                            app:edittextfontHint="ROBOTO-BOLD.TTF" />
                    </LinearLayout>

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:autoLink="email"
                        android:drawableLeft="@mipmap/mail"
                        android:drawablePadding="10dp"
                        android:text="mohitrajput987@gmail.com"
                        android:textColor="@color/secondary_text_color"
                        android:textColorLink="@color/secondary_text_color"
                        android:textSize="14sp"
                        app:edittextfont="ROBOTO-REGULAR.TTF"
                        app:edittextfontHint="ROBOTO-REGULAR.TTF" />

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:autoLink="phone"
                        android:drawableLeft="@mipmap/phone"
                        android:drawablePadding="10dp"
                        android:text="8987678888"
                        android:textColor="@color/secondary_text_color"
                        android:textColorLink="@color/secondary_text_color"
                        android:textSize="14sp"
                        app:edittextfont="ROBOTO-REGULAR.TTF"
                        app:edittextfontHint="ROBOTO-REGULAR.TTF" />


                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Hey tell me the this this this"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"
                        app:edittextfont="ROBOTO-LIGHT.TTF"
                        app:edittextfontHint="ROBOTO-LIGHT.TTF" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>