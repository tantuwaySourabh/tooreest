<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a reason for Rejection"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rg_reject">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rb1"
            android:text="Not available anymore on selected date"/>
        <RadioButton
            android:layout_width="match_parent"
            android:id="@+id/rb2"
            android:layout_height="wrap_content"
            android:text="Given Service no longer available"/>
        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/comment_layout"
        android:visibility="visible"
        android:padding="8dp">

        <EditText
            android:inputType="textMultiLine"
            android:id="@+id/comment"
            android:lines="3"
            android:minLines="3"
            android:gravity="center"
            android:maxLines="4"
            android:hint="Tell us why do you want to reject"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:scrollbars="vertical"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:background="@drawable/black_rectangle"
        />
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:background="@drawable/red_rounded_solid_bg"
        android:layout_margin="8dp"/>
</LinearLayout>

