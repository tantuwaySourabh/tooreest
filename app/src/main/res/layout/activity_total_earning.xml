<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mud_color"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <com.ebabu.tooreest.customview.CustomTextView
                android:id="@+id/tv_total_earning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3456"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:edittextfont="ROBOTO-MEDIUM.TTF"
                app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

            <com.ebabu.tooreest.customview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TOTAL EARNING ($)"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bottle_green"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_total_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TOTAL BOOKINGS"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-REGULAR.TTF"
                    app:edittextfontHint="ROBOTO-REGULAR.TTF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/lol_red"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_completed_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="BOOKINGS COMPLETED"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-REGULAR.TTF"
                    app:edittextfontHint="ROBOTO-REGULAR.TTF" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/drawer_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_accepted_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ACCEPTED BOOKINGS"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-REGULAR.TTF"
                    app:edittextfontHint="ROBOTO-REGULAR.TTF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#A593E0"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_new_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="NEW BOOKINGS"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-REGULAR.TTF"
                    app:edittextfontHint="ROBOTO-REGULAR.TTF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
