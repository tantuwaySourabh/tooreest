<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">


                    <ImageView
                        android:id="@+id/tv_profile_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/bg" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/transparent_black_color" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.ebabu.tooreest.customview.CustomTextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:text="Mohit Rajput"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                app:edittextfont="ROBOTO-BOLD.TTF" />

                            <ImageView
                                android:id="@+id/iv_badge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@mipmap/redstar" />
                        </FrameLayout>

                        <RatingBar
                            android:id="@+id/ratingbar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:isIndicator="true"
                            android:rating="5"
                            android:stepSize="0.5" />

                        <com.ebabu.tooreest.customview.CustomTextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="Category : Designer"
                            android:textColor="@color/divider_color"
                            android:textSize="15sp"
                            app:edittextfont="ROBOTO-REGULAR.TTF" />

                        <com.ebabu.tooreest.customview.CustomTextView
                            android:id="@+id/btn_add_remove_favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/accentColor"
                            android:gravity="center_vertical"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="@string/add_to_favorites"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:edittextfont="ROBOTO-REGULAR.TTF" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btn_fb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:src="@mipmap/fb_yellow" />

                            <ImageView
                                android:id="@+id/btn_gplus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:src="@mipmap/gplus_yellow" />

                            <ImageView
                                android:id="@+id/btn_twitter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:src="@mipmap/twitter_yellow" />

                            <ImageView
                                android:id="@+id/btn_linkedin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:src="@mipmap/linkedin_yellow" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/btn_id_verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/personal"
                        android:drawablePadding="10dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/id_verified"
                        android:textColor="@color/primary_text_color"
                        android:textSize="12sp"
                        app:edittextfont="ROBOTO-REGULAR.TTF"
                        app:edittextfontHint="ROBOTO-REGULAR.TTF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/btn_bank_verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/qote"
                        android:drawablePadding="10dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/bank_verified"
                        android:textColor="@color/primary_text_color"
                        android:textSize="12sp"
                        app:edittextfont="ROBOTO-REGULAR.TTF"
                        app:edittextfontHint="ROBOTO-REGULAR.TTF" />
                </LinearLayout>

                <com.ebabu.tooreest.customview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/gallery"
                    android:drawablePadding="5dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/gallery"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:edittextfont="ROBOTO-REGULAR.TTF"
                    app:edittextfontHint="ROBOTO-REGULAR.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/btn_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/small_phone"
                    android:drawablePadding="5dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/contact_1"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:edittextfont="ROBOTO-REGULAR.TTF"
                    app:edittextfontHint="ROBOTO-REGULAR.TTF" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/btn_aboutme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_rounded_solid_bg"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/plus_yellow"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:text="@string/about_me"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />


                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_about_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_rounded_solid_bg"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/about_me_text"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:edittextfont="ROBOTO-LIGHT.TTF"
                    app:edittextfontHint="ROBOTO-LIGHT.TTF" />


                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/btn_my_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_rounded_solid_bg"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/plus_yellow"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:text="@string/my_services_1"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/btn_offers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_rounded_solid_bg"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/plus_yellow"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:text="@string/offers"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />


                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/btn_my_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_rounded_solid_bg"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/plus_yellow"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:text="@string/my_gallery"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/btn_review_n_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_rounded_solid_bg"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/plus_yellow"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:text="@string/review_n_feedback"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/btn_request_for_quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_rounded_solid_bg"
                    android:clickable="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/plus_yellow"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:text="@string/request_for_quote"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF"
                    app:edittextfontHint="ROBOTO-MEDIUM.TTF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <com.ebabu.tooreest.customview.CustomTextView
        android:id="@+id/btn_book_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/yellow_rounded_solid_bg"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:text="@string/book_now"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:edittextfont="ROBOTO-REGULAR.TTF" />
</LinearLayout>

