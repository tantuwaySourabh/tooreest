<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/profile_back_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.ebabu.tooreest.customview.CustomTextView
                                    android:id="@+id/tv_company_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Mohit Rajput"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    app:edittextfont="ROBOTO-BOLD.TTF" />

                                <ImageView
                                    android:id="@+id/iv_badge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="10dp"
                                    android:src="@mipmap/redstar"
                                    android:visibility="gone" />


                            </FrameLayout>

                            <RatingBar
                                android:id="@+id/ratingbar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:isIndicator="true"
                                android:rating="0"
                                android:stepSize="0.5" />

                            <com.ebabu.tooreest.customview.CustomTextView
                                android:id="@+id/tv_city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:drawableLeft="@mipmap/location_pin"
                                android:drawablePadding="2dp"
                                android:gravity="center_vertical"
                                android:text="Indore"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:edittextfont="ROBOTO-REGULAR.TTF" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#aaffffff"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_fb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:src="@mipmap/fb_yellow" />

                        <ImageView
                            android:id="@+id/btn_gplus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:src="@mipmap/gplus_yellow" />

                        <ImageView
                            android:id="@+id/btn_twitter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:src="@mipmap/twitter_yellow" />

                        <ImageView
                            android:id="@+id/btn_linkedin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:src="@mipmap/linkedin_yellow" />
                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.ebabu.tooreest.customview.CustomTextView
                            android:id="@+id/btn_id_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableLeft="@mipmap/personal"
                            android:drawablePadding="10dp"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/id_verified"
                            android:textColor="@color/primary_text_color"
                            android:textSize="12sp"
                            app:edittextfont="ROBOTO-REGULAR.TTF"
                            app:edittextfontHint="ROBOTO-REGULAR.TTF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.ebabu.tooreest.customview.CustomTextView
                            android:id="@+id/btn_bank_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableLeft="@mipmap/qote"
                            android:drawablePadding="10dp"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/bank_verified"
                            android:textColor="@color/primary_text_color"
                            android:textSize="12sp"
                            app:edittextfont="ROBOTO-REGULAR.TTF"
                            app:edittextfontHint="ROBOTO-REGULAR.TTF" />
                    </LinearLayout>

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/gallery"
                        android:drawablePadding="5dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/gallery"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:edittextfont="ROBOTO-REGULAR.TTF"
                        app:edittextfontHint="ROBOTO-REGULAR.TTF" />

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/btn_contact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/small_phone"
                        android:drawablePadding="5dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/contact_1"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:edittextfont="ROBOTO-REGULAR.TTF"
                        app:edittextfontHint="ROBOTO-REGULAR.TTF" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_rounded_solid_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <com.ebabu.tooreest.customview.CustomTextView
                                android:id="@+id/tv_total_earning"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="$ 0"
                                android:textColor="@color/primaryColor"
                                android:textSize="18sp"
                                app:edittextfont="ROBOTO-MEDIUM.TTF"
                                app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                            <com.ebabu.tooreest.customview.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="1dp"
                                android:text="@string/total_earning"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="12sp"
                                app:edittextfont="ROBOTO-REGULAR.TTF"
                                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

                            <com.ebabu.tooreest.customview.CustomTextView
                                android:id="@+id/btn_view_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/yellow_rounded_solid_bg"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="5dp"
                                android:text="@string/view_details"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                app:edittextfont="ROBOTO-REGULAR.TTF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_rounded_solid_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <com.ebabu.tooreest.customview.CustomTextView
                                android:id="@+id/tv_weekly_earning"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="$ 0"
                                android:textColor="@color/primaryColor"
                                android:textSize="18sp"
                                app:edittextfont="ROBOTO-MEDIUM.TTF"
                                app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                            <com.ebabu.tooreest.customview.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="1dp"
                                android:text="@string/weekly_earning"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="12sp"
                                app:edittextfont="ROBOTO-REGULAR.TTF"
                                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

                            <com.ebabu.tooreest.customview.CustomTextView
                                android:id="@+id/btn_view_weekly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/yellow_rounded_solid_bg"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="5dp"
                                android:text="@string/view_details"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                app:edittextfont="ROBOTO-REGULAR.TTF" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/btn_aboutme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_rounded_solid_bg"
                        android:clickable="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/plus_yellow"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="@string/about_me"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        app:edittextfont="ROBOTO-MEDIUM.TTF"
                        app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                    <LinearLayout
                        android:id="@+id/text_aboutme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_rounded_solid_bg"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:visibility="gone">

                        <com.ebabu.tooreest.customview.CustomEditText
                            android:id="@+id/et_about_me"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:hint="@string/write_something_abt_u"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/primary_text_color"
                            android:textColorHint="@color/divider_color"
                            android:textSize="12sp"
                            app:edittextfont="ROBOTO-LIGHT.TTF"
                            app:edittextfontHint="ROBOTO-LIGHT.TTF" />

                        <ImageView
                            android:id="@+id/btn_edit_aboutme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:src="@mipmap/edit_yellow" />
                    </LinearLayout>

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/btn_my_services"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_rounded_solid_bg"
                        android:clickable="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/plus_yellow"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="@string/my_services_1"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        app:edittextfont="ROBOTO-MEDIUM.TTF"
                        app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/btn_provider_offer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_rounded_solid_bg"
                        android:clickable="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/plus_yellow"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:text="@string/offers"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:edittextfont="ROBOTO-MEDIUM.TTF"
                        app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/btn_my_document"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_rounded_solid_bg"
                        android:clickable="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/plus_yellow"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="@string/my_gallery"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:edittextfont="ROBOTO-MEDIUM.TTF"
                        app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/btn_review_n_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_rounded_solid_bg"
                        android:clickable="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/plus_yellow"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="@string/review_n_feedback"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        app:edittextfont="ROBOTO-MEDIUM.TTF"
                        app:edittextfontHint="ROBOTO-MEDIUM.TTF" />

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/btn_quote_request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_rounded_solid_bg"
                        android:clickable="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/plus_yellow"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="@string/quote_requests"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:edittextfont="ROBOTO-MEDIUM.TTF"
                        app:edittextfontHint="ROBOTO-MEDIUM.TTF" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/layout_drawer_provider" />
</android.support.v4.widget.DrawerLayout>