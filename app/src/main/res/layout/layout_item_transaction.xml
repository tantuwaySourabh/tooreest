<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <com.ebabu.tooreest.customview.CustomTextView
            android:id="@+id/tv_plus_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/accentColor"
            android:textSize="18sp"
            app:edittextfont="ROBOTO-BOLD.TTF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking"
                        android:textColor="@color/primary_text_color"
                        android:textSize="16sp"
                        app:edittextfont="ROBOTO-REGULAR.TTF" />

                    <com.ebabu.tooreest.customview.CustomTextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="(Order #12)"
                        android:textColor="@color/primary_text_color"
                        android:textSize="16sp"
                        app:edittextfont="ROBOTO-REGULAR.TTF" />
                </LinearLayout>

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u20b9 25"
                    android:textColor="@color/parrot_green"
                    android:textSize="16sp"
                    app:edittextfont="ROBOTO-MEDIUM.TTF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_transaction_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:edittextfont="ROBOTO-REGULAR.TTF" />

                <com.ebabu.tooreest.customview.CustomTextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/divider_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:edittextfont="ROBOTO-REGULAR.TTF" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>